@model IQueryable<Product>

@{
    Layout = "_Layout";
}


<div class="row">
    <div class="col-md-3">@await Component.InvokeAsync("CategoriesMenu")</div>
    <div class="col-md-9">
    <h2><span style="color: black;" class="badge bg-warning">Products(@await Component.InvokeAsync("ProductSummary"))</span></h2>
        <div class="row my-2">
            @foreach (Product prd in Model)
            {
                <partial name="_ProductCard" model="@prd" />
            }
        </div>
    </div>
</div>


 @section Footer{
<div>Only for Index footer</div>
} 
